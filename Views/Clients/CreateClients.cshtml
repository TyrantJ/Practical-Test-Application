@model Practical_Test_Application.Models.Clients

@{
    ViewData["Title"] = "CreateClients";
}

<h1>CreateClients</h1>

<h4>Clients</h4>
<hr />
<div class="row">
    <div class="col-md-4 border-4 shadow">
        <form asp-action="CreateClients" method="post">
            <br/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="clientCode" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label class="control-label">Full Name</label>
                <input asp-for="fullName" class="form-control"/>
                <span asp-validation-for="fullName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
            <br/>
        </form>
    </div>
</div>
<br/>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const firstNameInput = document.querySelector('[name="fullName"]');
        const clientCodeInput = document.querySelector('[name="clientCode"]');

        firstNameInput.addEventListener('input', function () {
            const words = this.value.trim().split(/\s+/);
            const initials = words.map(word => word.charAt(0).toUpperCase()).join('') + "001";
            clientCodeInput.value = initials;
        });
    });
</script>

<div>
    <a asp-action="ShowClients">Back to List</a>
</div>

